## System Control
alias sys='sudo systemctl'
alias status='sys status'
alias upgrade='yay'

## Commons
alias back="cd ../"

## Editor
alias edit="emacs -nw"


## Package Manager
alias pac='sudo pacman'
alias install='pac -S'
alias info= 'pac -Qii'
alias upgrade='pac -Syu'
alias remove='pac -Rns'

## Externals
alias cat="bat --color=always"
alias ls="eza --long --header --icons --git"

## YT-dlp

alias ytv='yt-dlp --format "bv*[ext=mp4]+ba[ext=m4a]/b[ext=mp4]"'
alias yta='yt-dlp --extract-audio --audio-format mp3 --audio-quality 0'

## Helpful ones
alias show='cat $(fzf --preview="bat --color=always {}")'
alias diff='diff --color=always --side-by-side'

## w3m
alias web='w3m duckduckgo.com'

## tmux

alias tnew='tmux new-session -s'
alias tl='tmux list-sessions'
alias ta='tmux attach -d -t'
